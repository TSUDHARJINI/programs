#include<stdio.h>
int main()
{
 int a;
    int *p;
    printf("enter the value of a:");
    scanf("%d",&a);
    p=&a;
    printf("the initial value of a is=%u\n:",p);
    p=p+5;
    printf("the value after adding 5 is=%u\n",p);
   p=p-2;
    printf("the value after subtracting 2 is=%u\n",p);
    p=++(p);
    printf("the value after increment is=%u\n",p);
    p=--(p);
    printf("the value after decrement is=%u\n",p);
}
