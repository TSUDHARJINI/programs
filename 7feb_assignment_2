#include<stdio.h>
#include<string.h>

 
int main()
{
    char s[100];  
    int i;
 
    printf("Enter  the string : ");
    scanf("%s",s);
  
  
    for(i=0;s[i];i++)  
    {
        if(s[i]>=65 && s[i]<=90)
         s[i]+=1;
        else if(s[i]>=97 && s[i]<=122)
         s[i]+=1;
 	}
 	
     
    printf("Resultant string =%s\n",s);
 
    return 0;
}
